#include <stdio.h>
#include <stdlib.h>

/* This program configure a function that convert Fahrenheit to Celcius */

int F_to_C(int f);
int C_to_F(int c);

int main(){
    int i;

    for (i = 0; i < 300; i = i + 20)
        printf("Fahrenheit: %3d     Celcius: %3d\n", i, F_to_C(i));

    printf("\n");

    for (i = 0; i < 300; i = i + 20)
        printf("Celcius: %3d     Fahrenheit: %3d\n", i, C_to_F(i));

    system("pause");
    return 0;
}


int F_to_C(int f){
    int c;

    c = 5 * (f - 32) / 9;
    return c;
}

int C_to_F(int c){
    int f;

    f = 9 * c / 5 + 32;
    return f;
}
